<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF en Rider" Height="250" Width="400">
    <Grid>
        <TextBlock Name="Texto" Text="¡Hola, Rider!"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"
                   Margin="0,40,0,0">
        </TextBlock>
        <Button Content="Haz click aquí" Width="150"
                Height="40" HorizontalAlignment="Center"
                VerticalAlignment="Center" Click="Button_Click"></Button>
        <ProgressBar x:Name="progressBar" Width="200"
                     Height="20" Minimum="0"
                     Maximum="100" Value="0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Margin="0,0,0,40"></ProgressBar>
    </Grid>
</Window>
