<Window x:Class="Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <TextBlock x:Name="Texto" Text="¡Haz clic en el botón!"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20">
        </TextBlock>
        <Button Content="Haz clic" HorizontalAlignment="Center"
                VerticalAlignment="Bottom" Height="40" Width="100" Click="Button_Click"></Button>
    </Grid>
</Window>
