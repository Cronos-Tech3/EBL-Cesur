<UserControl x:Class="Ej5.Control.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="RootControl">
    <StackPanel Orientation="Horizontal" Margin="5">
        <CheckBox IsChecked="{Binding ElementName=RootControl, Path=IsCompleted, Mode=TwoWay}"
                  VerticalAlignment="Center"/>
        <TextBlock Text="{Binding ElementName=RootControl, Path=TaskName}"
                   FontSize="16" Margin="10,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>