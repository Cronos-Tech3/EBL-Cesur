<Window x:Class="BienvenidaApp.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Bienvenida" Height="200" Width="300"> 
    <Grid> 
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/> 
        <TextBox x:Name="NombreTextBox" HorizontalAlignment="Left" Margin="70,20,0,0" VerticalAlignment="Top" Width="200"/> 
         
        <Label Content="Edad:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/> 
        <TextBox x:Name="EdadTextBox" HorizontalAlignment="Left" Margin="70,60,0,0" VerticalAlignment="Top" Width="200"/> 
         
        <Button Content="Enviar" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="260" Click="EnviarButton_Click"/> 
         
        <TextBlock x:Name="MensajeTextBlock" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="260"/> 
    </Grid> 
</Window> 

