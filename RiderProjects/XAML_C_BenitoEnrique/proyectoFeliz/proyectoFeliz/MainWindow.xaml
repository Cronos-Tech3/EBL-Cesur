<Window x:Class="PatientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ficha de Paciente" Height="350" Width="400">
    <Grid Background="#FFFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="NombreTextBox" Grid.Row="0" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Edad:" Grid.Row="1" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="EdadTextBox" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Dirección:" Grid.Row="2" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="DireccionTextBox" Grid.Row="2" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Teléfono:" Grid.Row="3" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="TelefonoTextBox" Grid.Row="3" Grid.Column="1" Margin="10"/>

        <Button Content="Guardar" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Background="#4CAF50" Foreground="White" Click="GuardarButton_Click"/>
    </Grid>
</Window>

