<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Selecciona un país:" FontSize="16" Margin="5"/>
                <ListBox SelectionChanged="OnCountrySelected">
                    <ListBoxItem Content="España"/>
                    <ListBoxItem Content="México"/>
                    <ListBoxItem Content="Argentina"/>
                </ListBox>
            <TextBlock FontSize="16" x:Name="lblPais"/>
        </StackPanel>
    </Grid>
</Page>